<Layout class="main">
  <Layout class="header">
    <Text>NoitaMP</Text>
    <Image src="data/particles/eye.png" @click="toggleAddress()"></Image>
    <Text>{{address}}</Text>
    <Image src="data/particles/eye.png" @click="copyAddress()"></Image>
  </Layout>
  <Layout class="table">
    <Layout class="header">
      <Text>Min√§s</Text>
      <Text>Latency(RTT)</Text>
      <Text>Actions</Text>
      <Text></Text>
    </Layout>
    <Layout forEach="minae in clients">
      <Text>{{minae.name}}</Text>
      <Text>{{minae.rtt}} ms</Text>
      <Button @click="kick(minae)">Kick</Button>
      <Button @click="ban(minae)">Ban</Button>
    </Layout>
  </Layout>
</Layout>
<Style>
.main {
  border: true;
}
.header {
  direction: horizontal;
}
.table {
  direction: vertical;
  border: true;
}
.table > Layout {
  direction: horizontal;
}
.table .header {
  border: true;
}
.table > Layout > * {
  width: 50;
}
</Style>