<Layout :debug="debug" class="main">

  <Layout :debug="debug" class="header">
    <Text>NoitaMP</Text>
    <Text class="address">Your address: {{address}}</Text>
    <Image :src="toggleAddressSrc" @click="toggleAddress()"></Image>
    <Image src="mods/noita-mp/files/data/ezgui/src/copy.png" @click="copyAddress()"></Image>
  </Layout>

  <Layout class="table" debug="true">
    <Layout class="header">
      <Text>Header 1</Text>
      <Text>Another header</Text>
      <Text>Boop</Text>
    </Layout>
    <Layout class="row" forEach="minae in player">
      <Text>Content</Text>
      <Text>Content 2</Text>
      <Text>{{ minae.name }}</Text>
    </Layout>
  </Layout>

  <Layout class="table" :debug="debug">
    <Layout class="header" :debug="debug">
      <Text>Min√§s</Text>
      <Text>Latency(RTT)</Text>
      <Text>Actions</Text>
    </Layout>
    <Layout :debug="debug" class="body" forEach="minae in player">
      <Text class="minaes">
      {{minae.name}} {{minae.health}}
      {{minae.x}},{{minae.y}}
      </Text>
      <Text class="rtt">{{minae.rtt}} ms</Text>
      <Layout>
        <Button @click="kick(minae)">Kick</Button>
        <Button @click="ban(minae)">Ban</Button>
      </Layout>
    </Layout>
  </Layout>
  <Button @click="toggleDebug()">{{debug}}</Button>

  <Layout :debug="debug" class="actions">
    <Image if="showStart()" src="mods/noita-mp/files/data/ezgui/src/start.png" @click="start()"></Image>
    <Image if="showStop()" src="mods/noita-mp/files/data/ezgui/src/stop.png" @click="stop()"></Image>
    <Image if="showConnect()" src="mods/noita-mp/files/data/ezgui/src/connect.png" @click="connect()"></Image>
    <Image if="showConnected()" src="mods/noita-mp/files/data/ezgui/src/connected.png"></Image>
    <Image if="showDisconnect()" src="mods/noita-mp/files/data/ezgui/src/disconnect.png" @click="disconnect()"></Image>
  </Layout>

</Layout>

<Style>
Text {
  padding: 2;
}
Image {
  padding: 2;
}

.main {
  border: true;
}


Layout {
  border: true;
}
.table {
  direction: vertical;
}
.table > Layout > * {
  width: 80;
  align_self_horizontal: center;
}
.table > Layout {
  direction: horizontal;
  border: false;
}



.header {
  direction: horizontal;
  align_items_vertical: center;
}
.address {
  width: 170;
}

.table {
  direction: vertical;
  align_items_horizontal: center;
}
.table > Layout {
  direction: horizontal;
  align_items_vertical: center;
}
.table .header > * {
  width: [cellWidth];
}
.table .body > * {
  width: [cellWidth];
}

.actions {
  direction: horizontal;
  align_items_vertical: center;
}
</Style>