<Layout debug="true">
    <Layout class="horizontal">
        <Text>Start server on {{ ip }}:{{ port }}</Text>
        <Button @click="startServer()">Start!</Button>
    </Layout>
    <Text forEach="element in collection">{{ element }}</Text>
</Layout>

<Style>
Layout {
  direction: vertical;
  padding: 2;
  background: true;
  border: true;
}
.horizontal {
  direction: horizontal;
}
Layout > Button {
  margin: [button_margin]; // Can also databind to CSS properties!
}
</Style>